<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/ForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="32dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email and we'll send a reset token."
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginTop="8dp" />

    <!-- Email Field -->
    <LinearLayout
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_white_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_email" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Enter your email"
            android:background="@android:color/transparent"
            android:paddingStart="8dp"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <!-- Email Error -->
    <TextView
        android:id="@+id/emailErrorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text=""
        android:textSize="12sp"
        android:layout_marginTop="4dp" />

    <!-- Global Error -->
    <TextView
        android:id="@+id/globalErrorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text=""
        android:textSize="13sp"
        android:layout_marginTop="16dp" />

    <!-- Send Reset Button -->
    <Button
        android:id="@+id/sendResetEmailButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Send Reset Email"
        android:textColor="#FFFFFF"
        android:backgroundTint="#5D5FEF"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />
    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />


</LinearLayout>
